---
import Fonts from '@components/Fonts.astro'
import '@styles/global.sass'

const {
  title = 'type.',
  description = 'just type',
  class: className,
} = Astro.props

const base = Astro.url.pathname.endsWith('/')
  ? Astro.url.pathname
  : Astro.url.pathname + '/'
---

<!doctype html>
<html data-font="serif">
  <head>
    <base href={base} target="_self" />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width initial-scale=1" />
    <meta name="theme-color" content="#161616" />
    <meta name="msapplication-TileColor" content="#575757" />
    <meta name="msapplication-navbutton-color" content="#161616" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#161616" />

    <meta property="og:title" content={title} />
    <meta property="og:image" content="/og/main.png" />
    <meta property="vk:image" content="/og/main-vk.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/og/main.png" />

    <Fonts />

    <link rel="icon" type="image/svg+xml" href="/fav/favicon.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/fav/favicon-32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/fav/favicon-16.png"
    />

    <title>{title}</title>
  </head>
  <body class={className}>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    min-height: 100vh;
    overflow-x: hidden;
  }

  body {
    display: flex;
    flex-direction: column;
    padding: var(--page-padding);
  }

  main {
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
  }
</style>
