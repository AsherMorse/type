		root: document.querySelector('main'),
		defaultValue: 'Hello, Milkdown!',
		features: {
			[Crepe.Feature.CodeMirror]: false,
			[Crepe.Feature.Toolbar]: false,
		},
		featureConfigs: {
			[Crepe.Feature.Placeholder]: {
				text: 'Start typing...',
				mode: 'doc',
			},
		},
	})

	crepe.create().then(() => {
